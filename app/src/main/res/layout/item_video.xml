<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>
<!--        tools:srcCompat="@tools:sample/avatars"-->

    <VideoView
        android:id="@+id/videoView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/ticktockImage"
        android:layout_below="@id/ticktockImage"
        android:text="TextView" />

    <ImageView
        android:id="@+id/ticktockImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignTop="@id/videoView"
        android:layout_alignLeft="@id/videoView"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        app:srcCompat="@drawable/ticktock" />

    <ImageView
        android:id="@+id/unlikeImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/likes"
        android:layout_alignRight="@id/videoView"
        android:layout_marginRight="15dp"
        app:srcCompat="@android:drawable/btn_star_big_on" />

    <ImageView
        android:id="@+id/likeImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/likes"
        android:layout_alignRight="@id/videoView"
        android:layout_marginRight="15dp"
        app:srcCompat="@android:drawable/btn_star_big_off" />

    <TextView
        android:id="@+id/likes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/videoView"
        android:layout_alignBottom="@id/videoView"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="100dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/description"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/videoView"
        android:layout_alignBottom="@id/videoView"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="100dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/description"
        android:layout_above="@id/description"
        android:layout_marginBottom="10dp"
        android:text="TextView" />


</RelativeLayout>
